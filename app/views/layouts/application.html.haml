!!!
<html lang="en">
%head
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  %title LaRuby.com
  = javascript_include_tag 'jquery-1.3.2.min', 'juitter/jquery.juitter', 'application'
  = javascript_tag nil, {:type => "text/javascript",:src  => "http://maps.google.com/maps?file=api&amp;v=2&amp;key=#{@map_key}"} unless @map_key.nil?
  = stylesheet_link_tag 'reset', 'text', '960', 'application'

%body
  %div.container_16
    %div.grid_16
      %h1#logo 
        = link_to "#{laruby}.com", 'http://laruby.com'
    %div.grid_7
      %ul#navigation
        %li= link_to 'Home', root_path
        %li= link_to 'About', static_page_path(:page => 'about')
        .clear
    .clear
    %div.grid_10#content
      = yield
    %div.grid_5.prefix_1#sidebar
      - unless controller.action_name == "events"
        %h2
          = laruby
          Meetup
        = render :partial => 'pages/events', :locals => { :events => meetup_events } 
    .clear

  :javascript
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  :javascript
    try {
    var pageTracker = _gat._getTracker("UA-10121876-1");
    pageTracker._trackPageview();
    } catch(err) {}
