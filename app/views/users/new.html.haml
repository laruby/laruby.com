%h1 Register

- form_for @user, :url => account_path do |f|
  = f.error_messages
  %br
  = f.label :email
  %br
  = f.text_field :email
  %br
  %br
  = f.label :password
  %br
  = f.password_field :password
  %br
  %br
  = f.label :password_confirmation
  %br
  = f.password_field :password_confirmation
  %br
  = f.submit "Register"